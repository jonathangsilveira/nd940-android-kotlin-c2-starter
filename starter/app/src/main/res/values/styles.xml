<resources>

    <!-- Base application theme. -->
    <style name="Theme"/>
    <style name="Theme.AsteroidRadar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Widget"/>
    <style name="Widget.AsteroidRadar"/>
    <style name="Widget.AsteroidRadar.TextView"/>
    <style name="Widget.AsteroidRadar.TextView.ImageTitle">
        <item name="android:background">#55010613</item>
        <item name="android:padding">@dimen/image_title_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AsteroidRadar.ImageTitle</item>
    </style>
    <style name="Widget.AsteroidRadar.TextView.Value">
        <item name="android:layout_marginTop">@dimen/value_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AsteroidRadar.Subtitle</item>
    </style>

</resources>
